{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
<div class="register-container">
    <section class="register-form">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1 class="register-title">S'inscrire</h1>
        <hr color="D3D3D3" width="300px"/>

        {{ form_start(registrationForm) }}
            <label for="{{ registrationForm.name.vars.id }}">Nom d'utilisateur :</label> <br>
            {{ form_widget(registrationForm.name) }} <br>
            
            <label for="{{ registrationForm.email.vars.id }}">Adresse mail :</label> <br>
            {{ form_widget(registrationForm.email) }} <br><br>
            
            <label for="{{ registrationForm.delivery_address.vars.id }}">Adresse de livraison :</label> <br>
            {{ form_widget(registrationForm.delivery_address) }} <br><br><br>
            
            <label for="{{ registrationForm.plainPassword.vars.id }}">Mot de passe</label> <br>
            {{ form_widget(registrationForm.plainPassword) }} <br>
            
            <label for="{{ registrationForm.passwordConfirmation.vars.id }}">Confirmer le mot de passe :</label> <br>
            {{ form_widget(registrationForm.passwordConfirmation) }} <br>

            <button type="submit" class="btn">Créer un compte</button> <br><br>
            <hr color="D3D3D3" width="300px"/> <br>
        {{ form_end(registrationForm) }}

        <div class="mb-3 text">Déjà inscrit ? <br>
        <button class="btn" onclick="window.location.href='{{ path('app_login') }}'">Se connecter</button>
        </div>
    </section>
</div>
{% endblock %}
