{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <section class="pdts-section">
        {% for sweatshirt in sweatshirts %}
        <div class="pdts">
            {% set imageMap = {
                1: 'black.jpeg',
                2: 'darkblue.jpeg',
                3: 'orange.jpeg',
                4: 'tricolor.jpeg',
                5: 'pink.jpeg',
                6: 'white.jpeg',
                7: 'grey.jpeg',
                8: 'blue.jpeg',
                9: 'us.jpeg',
                10: 'green.jpeg'
            } %}
            {% set image = imageMap[sweatshirt.id] %}

            <img class="pdts-img" src="{{ asset('images/' ~ image) }}" alt="{{ sweatshirt.name }}">
            <div class="pdts-content">
                <div class="pdts-description">
                    <p>Nom: {{ sweatshirt.name }}</p>
                    <p>Prix: {{ sweatshirt.price }} â‚¬</p>
                </div>
                <div class="pdts-btn-container">
                    <button class="pdts-btn" onclick="window.location.href='{{ path('app_product', { 'id': sweatshirt.id }) }}'">VOIR</button>
                </div>
            </div>
        </div>
        {% endfor %}
    </section>
{% endblock %}
